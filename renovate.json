{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kustomize": {
    "enabled": true
  },
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "dependencyDashboard": true,
  "timezone": "Europe/Chisinau",
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "renovate",
    "dependencies"
  ],
  "automergeType": "pr",
  "prHeader": "## ðŸ¤– Renovate: Dependency Maintenance",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?\\s+-\\s+https://raw\\.githubusercontent\\.com/[^/]+/[^/]+/(?:refs/tags/)?(?<currentValue>[^/]+)/"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "argocd",
      "matchPackageNames": [
        "quay.io/argoproj/argocd",
        "argoproj/argo-cd"
      ]
    },
    {
      "groupName": "multus",
      "matchPackageNames": [
        "k8snetworkplumbingwg/multus-cni",
        "ghcr.io/siderolabs/install-cni"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "groupName": "bar-assistant",
      "matchFileNames": [
        "apps/applications/home/bar-assistant/**"
      ]
    },
    {
      "groupName": "traefik-group",
      "matchPackageNames": [
        "/traefik/"
      ]
    },
    {
      "groupName": "synology-csi-drivers",
      "matchFileNames": [
        "apps/storage/synology-csi/**"
      ]
    },
    {
      "groupName": "iot-stack",
      "matchPackageNames": [
        "ghcr.io/koenkk/zigbee2mqtt",
        "eclipse-mosquitto",
        "ghcr.io/home-assistant-libs/python-matter-server",
        "ghcr.io/home-operations/home-assistant"
      ]
    },
    {
      "groupName": "db-stack",
      "matchPackageNames": [
        "redis",
        "getmeili/meilisearch"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose",
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+-[0-9a-f]+$/"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchPackageNames": [
        "renovate/renovate",
        "kube-prometheus-stack"
      ],
      "description": "Daily maintenance window for core GitOps and monitoring components",
      "schedule": [
        "before 4am"
      ]
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "matchPackageNames": [
        "ghcr.io/spegel-org/helm-charts/spegel"
      ],
      "pinDigests": false,
      "description": "Disable pinning for Spegel OCI chart as Kustomize helmCharts doesn't support digests"
    }
  ]
}
