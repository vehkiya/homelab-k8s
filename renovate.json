{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kustomize": {
    "enabled": true
  },
  "commitMessagePrefix": ":arrow_up_small:",
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose"
    },
    {
      "packagePatterns": [
        "^ghcr.io\\/hotio\\/"
      ],
      "versioning": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "packagePatterns": [
        "^lscr.io\\/linuxserver\\/"
      ],
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<revision>\\d+)$"
    },
    {
      "packagePatterns": [
        "renovate/renovate",
        "kube-prometheus-stack"
      ],
      "schedule": [
        "* 0-4 * * *"
      ],
      "automerge": true
    }
  ]
}