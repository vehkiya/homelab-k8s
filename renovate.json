{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kustomize": {
    "enabled": true
  },
  "extends": [
    "config:recommended",
    "config:recommended"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "prHeader": "## ⬆️ Dependency Updates",
  "packageRules": [
    {
      "matchManagers": [
        "helm-values",
        "helm-release"
      ],
      "groupName": "helm"
    },
    {
      "matchDatasources": [
        "docker"
      ]
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "groupName": "bar-assistant",
      "matchFileNames": [
        "apps/applications/home/bar-assistant/**"
      ]
    },
    {
      "groupName": "traefik-group",
      "automerge": false,
      "matchPackageNames": [
        "/traefik/"
      ]
    },
    {
      "groupName": "synology-csi-drivers",
      "automerge": false,
      "matchFileNames": [
        "apps/storage/synology-csi/**"
      ]
    },
    {
      "groupName": "iot-stack",
      "matchPackageNames": [
        "ghcr.io/koenkk/zigbee2mqtt",
        "eclipse-mosquitto",
        "ghcr.io/home-assistant-libs/python-matter-server",
        "ghcr.io/home-operations/home-assistant"
      ],
      "automerge": false
    },
    {
      "groupName": "db-stack",
      "matchPackageNames": [
        "redis",
        "getmeili/meilisearch"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose",
      "automerge": true
    },
    {
      "schedule": [
        "* 0 * * *"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/renovate/renovate/",
        "/kube-prometheus-stack/"
      ]
    }
  ]
}
