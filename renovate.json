{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kustomize": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker",
        "lscr.io/linuxserver/bazarr",
        "lscr.io/linuxserver/radarr",
        "lscr.io/linuxserver/sonarr",
        "lscr.io/linuxserver/prowlarr",
        "lscr.io/linuxserver/qbittorrent"
      ],
      "versioning": "loose"
    }
  ]
}
