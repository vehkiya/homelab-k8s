{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kustomize": {
    "enabled": true
  },
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "dependencyDashboard": true,
  "timezone": "Europe/Chisinau",
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "renovate",
    "dependencies"
  ],
  "automergeType": "pr",
  "prHeader": "## ðŸ¤– Renovate: Dependency Maintenance",
  "packageRules": [
    {
      "matchManagers": [
        "helm-values",
        "helmv3"
      ],
      "groupName": "helm"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "groupName": "bar-assistant",
      "matchFileNames": [
        "apps/applications/home/bar-assistant/**"
      ]
    },
    {
      "groupName": "traefik-group",
      "matchPackageNames": [
        "/traefik/"
      ]
    },
    {
      "groupName": "synology-csi-drivers",
      "matchFileNames": [
        "apps/storage/synology-csi/**"
      ]
    },
    {
      "groupName": "iot-stack",
      "matchPackageNames": [
        "ghcr.io/koenkk/zigbee2mqtt",
        "eclipse-mosquitto",
        "ghcr.io/home-assistant-libs/python-matter-server",
        "ghcr.io/home-operations/home-assistant"
      ]
    },
    {
      "groupName": "db-stack",
      "matchPackageNames": [
        "redis",
        "getmeili/meilisearch"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose",
      "allowedVersions": "/^((?!arm).)*$/"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchPackageNames": [
        "renovate/renovate",
        "kube-prometheus-stack"
      ],
      "description": "Daily maintenance window for core GitOps and monitoring components",
      "schedule": [
        "before 4am"
      ]
    }
  ]
}